<Window x:Class="MedicalReferral.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medical Referrals" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Add Referral" Click="AddReferral_Click" Margin="5"/>
            <Button Content="View All Referrals" Click="ViewAllReferrals_Click" Margin="5"/>
        </StackPanel>
        <ListBox x:Name="ReferralListBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
